###############################################################################
# Basic runtime settings
###############################################################################

NODE_ENV=development              # "development" | "production"
PORT=5000                         # Express/Vite listen port

###############################################################################
# Contact-form e-mail (NodeMailer)                                              
###############################################################################
MAIL_HOST=smtp.example.com        # SMTP server hostname
MAIL_PORT=465                     # 465 = SSL/TLS, 587 = STARTTLS
MAIL_SECURE=true                  # "true" if using port 465, else "false"

MAIL_USER=postmaster@example.com  # SMTP login / “From” address
MAIL_PASS=YOUR_SMTP_PASSWORD      # SMTP password or API token

MAIL_TO=contact@yourdomain.com    # Destination address for form submissions
